<%= render "shared/menu" %>
<h3>Categories</h3>
<table>
	<% @categories.each do |category| %>
		<tr>
			<td><%= category.name %></td>
			<td><%= link_to "Edit", edit_admin_category_path(category), :method => :get %></td>
			<td><%= link_to "Delete", admin_category_path(category), :method => :delete %></td>
		</tr>	  
	<% end %>
</table>
<br>
<div id="notice"><%= notice %></div>
<br>
<%= link_to "New category", new_admin_category_path %>